@model VGGLinkedIn.Web.InputModels.AddPostInputModel
@{
    ViewBag.Title = "Add";
}

<h2>Add Post</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-lg-8">
            @Html.ValidationSummary()

            <div class="form-group">
                @Html.LabelFor(x => x.Title)
                @Html.TextBoxFor(x => x.Title, new {@class = "form-control"})
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Tag)
                @Html.TextBoxFor(x => x.Tag, new {@class = "form-control"})
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Content)
                @Html.TextAreaFor(x => x.Content, new {@class = "form-control"})
            </div>

            <input type="submit" value="Publish Post" class="btn btn-default"/>
        </div>

        <div class="col-lg-4">
           
        </div>
    </div>
}

@section Scripts
{
    <script src="~/Content/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("Content");
    </script>
}
