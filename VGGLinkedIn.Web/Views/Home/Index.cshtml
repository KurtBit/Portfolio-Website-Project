@model IEnumerable<VGGLinkedIn.Web.Models.PostViewModel>

@{
    ViewBag.Title = "Home";
}

    @Html.Partial("_HeroArea")

<div class="row">
    <div class="col-lg-8">
        @foreach (var post in Model)
        {
            @Html.Partial("_Post", post)
        }
    </div>
    
    <div class="col-lg-4">
        @Html.Partial("_AboutMe")
    </div>
</div>


   

