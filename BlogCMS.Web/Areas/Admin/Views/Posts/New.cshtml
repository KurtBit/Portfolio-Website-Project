@model BlogCMS.Web.Areas.Admin.InputModel.NewPostInputModel
@{
    ViewBag.Title = "New";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">

        <div class="col-lg-2">

        </div>

        <div class="col-lg-6">
            <h2>Add Post</h2>

            @Html.ValidationSummary()

            <div class="form-group">
                @Html.LabelFor(x => x.Title)
                @Html.TextBoxFor(x => x.Title, new {@class = "form-control"})
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Slug)
                @Html.TextBoxFor(x => x.Slug, new {@class = "form-control"})
            </div>

            <div class="form-group">
                @Html.LabelFor(x => x.Content)
                @Html.TextAreaFor(x => x.Content, new {@class = "form-control"})
            </div>

            <input type="submit" value="Publish Post" class="btn btn-default"/>
        </div>

    </div>
}

<script src="~/Content/ckeditor/ckeditor.js"></script>
<script>
            CKEDITOR.replace("Content");
</script>
