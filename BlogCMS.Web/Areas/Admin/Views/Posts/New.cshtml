@model BlogCMS.Web.Areas.Admin.InputModel.PostInputModel

@{
    ViewBag.Title = "New";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h2>Add Post</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.ValidationMessageFor(model => model.Title, "", new {@class = "text-danger"})
            @Html.LabelFor(x => x.Title, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(x => x.Title, new {htmlAttributes = new {@class = "control-label col-md-2"}})
            </div>
        </div>

        <div class="form-group">
            @Html.ValidationMessageFor(model => model.Slug, "", new { @class = "text-danger" })
            @Html.LabelFor(x => x.Slug, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(x => x.Slug, new { htmlAttributes = new { @class = "control-label col-md-2" } })
            </div>
        </div>

        <div class="form-group">
            @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
            @Html.LabelFor(x => x.Content, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(x => x.Content, new { htmlAttributes = new { @class = "control-label col-md-2" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Update" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<script src="~/Content/ckeditor/ckeditor.js"></script>
<script>
            CKEDITOR.replace("Content");
</script>
