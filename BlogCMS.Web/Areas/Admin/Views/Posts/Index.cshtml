@model IEnumerable<BlogCMS.Web.Areas.Admin.Models.PostsViewModel>

<div class="col-md-1"></div>

<div class="col-md-10">
    <h1>Posts</h1>
    <div class="btn-toolbar">
        <div class="btn-group">
            <a href="@Url.Action("New")" class="btn btn-primary btn-sm"><i class="glyphicon glyphicon-plus"></i> Add Post</a>
        </div>
        <table class="table table-striped table-size">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Tags</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var post in Model)
                {
                    <tr>
                        <td>@post.Title</td>
                        <td>@post.Author</td>
                        <td>@post.Tag</td>
                        <td>@post.PostedAt</td>
                        <td>
                            @if (post.IsDeleted == 0)
                            {
                                <div class="btn-group btn-group-xs">
                                    <a href="@Url.Action("Delete", new {@id = @post.Id})" class="btn btn-danger" data-post="Are you sure you want to trash this post?">
                                        <i class="glyphicon glyphicon-remove"></i> Trash
                                    </a>
                                    <a href="#" class="btn btn-danger dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
                                </div>
                            }
                            else
                            {
                                <a href="@Url.Action("Restore", new {@post.Id})" class="btn btn-xs btn-success" data-post>
                                    <i class="glyphicon glyphicon-plus-sign"></i> Restore
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
