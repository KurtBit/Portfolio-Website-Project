@model IEnumerable<BlogCMS.Web.Areas.Admin.Models.ProjectsViewModel>

<h1>Projects</h1>
<div class="btn-toolbar">
    <div class="btn-group">
        <a href="@Url.Action("New")" class="btn btn-primary btn-sm"><i class="glyphicon glyphicon-plus"></i> Add Project</a>
    </div>
    <table class="table table-striped table-size">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Kind</th>
                <th>Time-span</th>
                <th>Url</th>
                <th>Image-Url</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var project in Model)
            {
                <tr>
                    <td>@project.Title</td>
                    <td>@project.Author</td>
                    <td>@project.Slug</td>
                    <td>@project.TimeSpan</td>
                    <td>@project.Url</td>
                    <td>@project.ImgFrameUrl</td>
                    <td>
                        @if (project.IsDeleted == 0)
                        {
                            <div class="btn-group btn-group-xs">
                                <a href="@Url.Action("Delete", new {@id = @project.Id})" class="btn btn-danger" data-post="Are you sure you want to trash this post?">
                                    <i class="glyphicon glyphicon-remove"></i> Trash
                                </a>
                                <a href="#" class="btn btn-danger dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
                                @*<ul class="dropdown-menu">
                                    <li>
                                        <a href="@Url.Action("Delete", new {@id = 1})" data-post="Are you sure you want to delete this post permanently?">
                                            <i class="glyphicon glyphicon-remove"></i> Delete
                                        </a>
                                    </li>
                                </ul>*@
                            </div>
                        }
                        else
                        {
                            <a href="@Url.Action("Restore", new {@project.Id})" class="btn btn-xs btn-success" data-post>
                                <i class="glyphicon glyphicon-plus-sign"></i> Restore
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>